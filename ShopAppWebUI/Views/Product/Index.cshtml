@model ShopAppWebUI.Models.ProductListViewModel

@{
    Layout = "~/Views/_Layout.cshtml";
}

<table class="table table-responsive">
    <tr>
        <td><span><h4>Product Name</h4></span></td>
        <td><span><h4>Unit Price</h4></span></td>
	    <td><span><h4>Units In Stock</h4></span></td>
	    <td></td>
    </tr>
    @foreach (var product in Model.Products)
    {
	    <tr>
		    <td>@product.ProductName</td>
		    <td>@product.UnitPrice</td>
		    <td>@product.UnitsInStock</td>
		    <td><a class="btn btn-cs btn-success"asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to Cart</a></td>
	    </tr>
    }
</table>
<product-list-pager
	current-category="@Model.CurrentCategory"
	current-page="@Model.CurrentPage"
	page-count="@Model.PageCount"
    page-size="@Model.PageSize"
	></product-list-pager>